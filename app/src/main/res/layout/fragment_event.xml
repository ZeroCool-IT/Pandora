<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_details_top_margin"
    tools:context="it.zerocool.batmacaana.">


    <!-- sample xml -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imageView"
                    android:adjustViewBounds="true"

                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/fullscreenButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_alignBottom="@id/imageView"
                    android:layout_alignRight="@id/imageView"
                    android:layout_alignEnd="@id/imageView"
                    android:src="@drawable/ic_fullscreen_grey600_36dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_layout"
                    android:orientation="horizontal"
                    android:layout_below="@id/imageView"
                    android:gravity="center">

                    <Button
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/action_button_lr_padding"
                        android:paddingRight="@dimen/action_button_lr_padding"
                        android:paddingTop="@dimen/action_button_td_padding"
                        android:paddingBottom="@dimen/action_button_td_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/phoneButton"
                        android:background="@color/transparent_bg"
                        style="?android:attr/borderlessButtonStyle"
                        android:drawableTop="@drawable/ic_call_grey600_48dp"
                        android:text="@string/call"
                        android:textColor="@color/action_button_text" />

                    <Button
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/action_button_lr_padding"
                        android:paddingRight="@dimen/action_button_lr_padding"
                        android:paddingTop="@dimen/action_button_td_padding"
                        android:paddingBottom="@dimen/action_button_td_padding"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/urlButton"
                        android:background="@color/transparent_bg"
                        android:drawableTop="@drawable/ic_link_grey600_48dp"
                        android:text="@string/url"
                        android:textColor="@color/action_button_text" />

                    <Button
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/action_button_lr_padding"
                        android:paddingRight="@dimen/action_button_lr_padding"
                        android:paddingTop="@dimen/action_button_td_padding"
                        android:paddingBottom="@dimen/action_button_td_padding"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mailButton"
                        android:background="@color/transparent_bg"
                        android:text="@string/email"
                        android:drawableTop="@drawable/ic_email_grey600_48dp"
                        android:textColor="@color/action_button_text" />

                    <Button
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/action_button_lr_padding"
                        android:paddingRight="@dimen/action_button_lr_padding"
                        android:paddingTop="@dimen/action_button_td_padding"
                        android:paddingBottom="@dimen/action_button_td_padding"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mapButton"
                        android:background="@color/transparent_bg"
                        android:text="@string/map"
                        android:drawableTop="@drawable/ic_map_grey600_48dp"
                        android:textColor="@color/action_button_text" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_local_library_grey600_36dp" />

                    <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        expandableTextView:maxCollapsedLines="8"
                        expandableTextView:animDuration="200"
                        expandableTextView:expandDrawable="@drawable/ic_expand_more_grey600_36dp"
                        expandableTextView:collapseDrawable="@drawable/ic_expand_less_grey600_36dp">

                        <TextView
                            android:id="@id/expandable_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@id/expand_collapse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_gravity="right|bottom"
                            android:background="@android:color/transparent" />
                    </com.ms.square.android.expandabletextview.ExpandableTextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/timecard_layout"
                    android:paddingTop="8dp"
                    android:layout_below="@id/description_layout"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_access_time_grey600_36dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/timecard_tv"
                        android:text="Dummy timecard" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_below="@id/timecard_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_place_grey600_36dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/address_tv"
                        android:text="Dummy address" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_below="@id/address_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_call_grey600_36dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/phone_tv"
                        android:text="Dummy phone number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_below="@id/phone_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_email_grey600_36dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/mail_tv"
                        android:text="Dummy mail" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/link_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_below="@id/mail_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_link_grey600_36dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/link_tv"
                        android:text="Dummy url" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tag_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:layout_below="@id/link_layout">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_local_offer_grey600_36dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/tag_tv"
                        android:text="Dummy tag" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <com.shamanland.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-32dp"
        android:layout_marginRight="20dp"
        android:id="@+id/floatingButton"
        android:src="@drawable/ic_event_white_24dp"
        app:floatingActionButtonColor="@color/accentColor"
        app:floatingActionButtonSize="normal"
        android:layout_alignParentEnd="false"
        android:baselineAlignBottom="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

    </com.shamanland.fab.FloatingActionButton>

</RelativeLayout>
