<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="12dp"
    android:padding="8dp"
    card_view:cardCornerRadius="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/content_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/content_accent"
                android:layout_toRightOf="@+id/content_accent"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Header"
                android:textColor="@color/primary_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/content_subheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_header"
                android:layout_toEndOf="@+id/content_accent"
                android:layout_toRightOf="@+id/content_accent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="Tag"
                android:textColor="@color/secondary_text_color" />

            <TextView
                android:id="@+id/content_accent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circular_textview"
                android:elevation="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="10,1 Km"
                android:textColor="@color/secondary_text_color"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/content_imagery"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/iv_card_imagery"
            android:scaleType="centerCrop"
            android:src="@drawable/im_placeholder" />

    </LinearLayout>


</android.support.v7.widget.CardView>
