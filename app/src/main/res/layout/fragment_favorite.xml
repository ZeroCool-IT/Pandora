<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/content_recycler_top_margin"
    android:orientation="vertical"
    tools:context="it.zerocool.batmacaana.FavoriteFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/favorite_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/favorite_progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/primaryColor" />

    <TextView
        android:id="@+id/no_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/no_favorite"
        android:textSize="32sp"
        android:visibility="gone" />
</RelativeLayout>
